# Server
PORT=4001

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=nest-auth
DB_PASSWORD=ChangeMe1234*
DB_DATABASE=nest-auth-db

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=3600

# Client Configuration (Multi-Client Support)
# Client 0: Local Development
AUTH_CLIENT_0_ID=local
AUTH_CLIENT_0_URI=http://localhost:3000
AUTH_CLIENT_0_ACTION_INVITE_ROUTE=auth/accept-invitation
AUTH_CLIENT_0_ACTION_INVITE_VALIDITY=48
AUTH_CLIENT_0_ACTION_VALIDATE_EMAIL_ROUTE=auth/validate-email
AUTH_CLIENT_0_ACTION_VALIDATE_EMAIL_VALIDITY=24
AUTH_CLIENT_0_ACTION_RESET_PASSWORD_ROUTE=auth/reset-password
AUTH_CLIENT_0_ACTION_RESET_PASSWORD_VALIDITY=1
AUTH_CLIENT_0_ACTION_CHANGE_PASSWORD_ROUTE=auth/change-password
AUTH_CLIENT_0_ACTION_CHANGE_PASSWORD_VALIDITY=24

# Admin account (created on first start)
ADMIN_EMAIL=admin@devlab.io
ADMIN_USERNAME=admin
ADMIN_PASSWORD=ChangeMe1234*

# Email (Inbucket for testing)
SMTP_HOST=localhost
SMTP_PORT=2500
SMTP_SECURE=false
SMTP_IGNORE_TLS=true
EMAIL_FROM=noreply@demo.com

