{
  "name": "nest-auth-monorepo",
  "version": "0.0.5",
  "private": true,
  "description": "NestJS Authentication Module - Monorepo",
  "author": "DevLab",
  "license": "UNLICENSED",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn build:types && yarn build:client && yarn build:auth",
    "build:types": "yarn workspace @devlab-io/nest-auth-types build",
    "build:auth": "yarn workspace @devlab-io/nest-auth build",
    "build:client": "yarn workspace @devlab-io/nest-auth-client build",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "lint": "yarn workspaces run lint",
    "lint:check": "yarn workspaces run lint:check",
    "test": "yarn workspaces run test",
    "type-check": "yarn workspaces run type-check",
    "clean": "yarn workspaces run clean && rm -rf dist node_modules || true"
  },
  "devDependencies": {
    "prettier": "^3.4.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=1.22.0"
  }
}
