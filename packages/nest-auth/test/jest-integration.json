{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testRegex": ".integration.spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "testEnvironment": "node",
  "moduleNameMapper": {
    "^@devlab-io/nest-auth-types(.*)$": "<rootDir>/../../nest-auth-types/src$1"
  },
  "setupFilesAfterEnv": ["<rootDir>/setup.ts"],
  "collectCoverageFrom": [
    "**/*.(t|j)s",
    "!**/*.spec.ts",
    "!**/*.integration.spec.ts",
    "!**/node_modules/**",
    "!**/dist/**"
  ],
  "coverageDirectory": "../coverage-integration",
  "silent": true
}
